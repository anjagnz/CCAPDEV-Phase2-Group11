<header class="nav-header">
    <div class="navbar">
        <div class="logo">
            <label id="labmate-logo">Lab<span style="color:#1d3853;">Mate</span></label>
        </div>

        {{!-- Links based on user type  --}}
        <ul class="nav-links">
            <li><a href="{{#if (eq user.type 'Faculty')}}/labtech-home{{else}}/student-home{{/if}}" id="nav-home" title="Home Page">Home</a></li>
            <li><a href="{{#if (eq user.type 'Faculty')}}/labtech-laboratories{{else}}/student-laboratories{{/if}}" id="nav-lab" title="View Laboratories">Laboratories</a></li>
            <li><a href="{{#if (eq user.type 'Faculty')}}/labtech-reservations{{else}}/student-reservations{{/if}}" id="nav-reserve" title="Check Reservations">Reservations</a></li>
        </ul>

        <div class="nav-profile">
            <a href="{{#if (eq user.type 'Faculty')}}/labtech-profile{{else}}/student-profile{{/if}}"><img src="{{#if user.image}}{{user.image}}{{else}}/img/default-profile.png{{/if}}" id="profile-img" title="View Profile" alt="Profile Image"></a>
        </div>
    </div>
</header>
<script>
    // Add underline on current page
    document.addEventListener("DOMContentLoaded", function() {
        const page = window.location.pathname.split("/").pop() || "index.html";
        const pageWithoutExt = page.replace(".html", "");

        // Add active class to the current page in the navigation bar
        switch (pageWithoutExt) {
            case 'student-home':
            case 'labtech-home':
                document.getElementById("nav-home")?.classList.add("active");
                break;
            case 'student-reservations':
            case 'labtech-reservations':
                document.getElementById("nav-reserve")?.classList.add("active");
                break;
            case 'student-laboratories':
            case 'labtech-laboratories':
                document.getElementById("nav-lab")?.classList.add("active");
                break;
            default:
                break;
        }
    });
</script>